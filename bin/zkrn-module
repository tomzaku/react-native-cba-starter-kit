#!/usr/bin/env node
'use strict';

const program = require("commander");

program
  // .version(require('../package.json').version)
  .command("create [moduleName]")
  .description("Create module")
  .action(function (moduleName, cmd) {
    const create = require('../src/cli/module/create')
    create(moduleName)
  })
program
  // .version(require('../package.json').version)
  .command("copy [moduleName] [appPath]")
  .description("Copy module to another App")
  .action(function (moduleName, cmd) {
    const copy = require('../src/cli/module/copy')
    copy(moduleName)
  })
program
  // .version(require('../package.json').version)
  .command("remove [moduleName]")
  .description("Remove module")
  .action(function (moduleName, cmd) {
    const remove = require('../src/cli/module/remove')
    remove(moduleName)
  })

program
  .parse(process.argv);